<!DOCTYPE html>
<html>
  <head>
    <title>HelloWorldActionCable</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class= 'container'>
      <%= render 'users/status' %>
      <main data-appearing-on=<%=request.path%>>
        <%= yield %>
      </main>
    </div>
  </body>
</html>
